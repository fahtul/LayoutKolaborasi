<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acengganteng.layoutkolaborasi.LayoutKloaborasi">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:src="@drawable/gambar1"
    android:scaleType="centerCrop"
    android:id="@+id/gambar"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Mari Belajar Android"
    android:background="@color/colorAccent"
    android:textStyle="bold"
    android:textSize="24dp"
    android:id="@+id/maribelajar"
    android:layout_below="@+id/gambar"
    android:layout_alignRight="@id/gambar"
    android:layout_alignTop="@id/gambar"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ff0000"
    android:text="Saya Sedang Berhitung"
    android:layout_below="@+id/gambar"
    android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:text="Sign Up"
        android:layout_below="@id/gambar"
        android:id="@+id/signup"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textColor="#ff0000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#000000"
        android:layout_below="@id/gambar"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
